        <script>
            function changeResumeFormat() {
                const format = document.getElementById('resumeFormat').value;
                const previewLeft = document.getElementById('previewLeft');
                const previewRight = document.getElementById('previewRight');
        
                // Standard format: Classic green theme
                if (format === 'standard') {
                    previewLeft.className = 'preview-cnt-l bg-green text-white';
                    previewRight.className = 'preview-cnt-r bg-white';
                    document.body.style.fontFamily = "'Poppins', sans-serif";
                    document.body.style.fontSize = '1.6rem';
                    document.body.style.lineHeight = '1.6';
                } 
                // Modern format: Blue theme with larger text
                else if (format === 'modern') {
                    previewLeft.className = 'preview-cnt-l bg-blue text-white';
                    previewRight.className = 'preview-cnt-r bg-light-blue text-dark';
                    document.body.style.fontFamily = "'Manrope', sans-serif";
                    document.body.style.fontSize = '1.8rem';
                    document.body.style.lineHeight = '1.8';
                } 
                // Minimalist format: Grey theme with a simple layout
                else if (format === 'minimalist') {
                    previewLeft.className = 'preview-cnt-l bg-grey text-dark';
                    previewRight.className = 'preview-cnt-r bg-white';
                    document.body.style.fontFamily = "'Arial', sans-serif";
                    document.body.style.fontSize = '1.6rem';
                    document.body.style.lineHeight = '1.4';
                }
        
                // Additional customization for specific formats
                customizeResumePreview(format);
            }
        
            function customizeResumePreview(format) {
                const previewLeft = document.getElementById('previewLeft');
                const previewRight = document.getElementById('previewRight');
        
                if (format === 'standard') {
                    previewLeft.style.borderRight = '2px solid #fff';
                    previewRight.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)';
                } else if (format === 'modern') {
                    previewLeft.style.borderRight = '4px solid #007BFF';
                    previewRight.style.boxShadow = '0 6px 12px rgba(0, 0, 0, 0.3)';
                } else if (format === 'minimalist') {
                    previewLeft.style.borderRight = '1px dashed #333';
                    previewRight.style.boxShadow = 'none';
                }
            }
        </script>
        
